<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#ffffff"
        android:id="@+id/home_user_info_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/home_user_info_profile_picture"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:cropToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_fullName"
            android:layout_alignTop="@+id/home_user_info_profile_picture"
            android:layout_toEndOf="@+id/home_user_info_profile_picture"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:gravity="left|center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_login"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/home_user_info_fullName"
            android:layout_toEndOf="@+id/home_user_info_profile_picture"
            android:singleLine="true"
            android:gravity="left|center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_email"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/home_user_info_login"
            android:layout_alignStart="@+id/home_user_info_login"
            android:singleLine="true"
            android:gravity="left|center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_gpa"
            android:singleLine="true"
            android:layout_below="@+id/home_user_info_email"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_promo"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/home_user_info_credits"
            android:layout_alignStart="@+id/home_user_info_credits"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Year :"
            android:id="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/home_user_info_profile_picture"
            android:gravity="left"
            android:textColor="#000000"
            android:background="@android:drawable/button_onoff_indicator_on"
            android:layout_alignRight="@+id/textView11"
            android:layout_alignEnd="@+id/textView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GPA :"
            android:id="@+id/textView9"
            android:layout_alignBottom="@+id/home_user_info_gpa"
            android:layout_toRightOf="@+id/home_user_info_profile_picture"
            android:gravity="left"
            android:textColor="#000000"
            android:autoText="false"
            android:background="@android:drawable/button_onoff_indicator_on"
            android:layout_alignRight="@+id/textView11"
            android:layout_alignEnd="@+id/textView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Credits :"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView9"
            android:layout_toRightOf="@+id/home_user_info_profile_picture"
            android:layout_toEndOf="@+id/home_user_info_profile_picture"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:textColor="#000000"
            android:background="@android:drawable/button_onoff_indicator_on" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/home_user_info_credits"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignLeft="@+id/home_user_info_gpa"
            android:layout_alignStart="@+id/home_user_info_gpa"
            android:singleLine="true"
            android:gravity="center" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/last_mark_title"
        android:id="@+id/home_last_mark_title"
        android:layout_below="@+id/home_user_info_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#0d0606"
        android:layout_marginTop="5dp" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/home_last_marks_list"
        android:layout_below="@+id/home_last_mark_title"


        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/last_grade_title"
        android:id="@+id/home_last_grade_title"
        android:layout_below="@id/home_last_marks_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_last_grade_list"
        android:layout_below="@+id/home_last_grade_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f5f4f9"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp" />

</RelativeLayout>
