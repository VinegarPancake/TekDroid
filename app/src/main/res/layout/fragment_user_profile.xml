<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:id="@+id/home_user_info_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/home_user_info_profile_picture"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:cropToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_fullName"
            android:layout_alignTop="@+id/home_user_info_profile_picture"
            android:layout_toEndOf="@+id/home_user_info_profile_picture"
            android:layout_margin="0dp"
            android:singleLine="true"
            android:gravity="left|center"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_login"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/home_user_info_fullName"
            android:layout_toEndOf="@+id/home_user_info_profile_picture"
            android:singleLine="true"
            android:gravity="left|center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_email"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/home_user_info_login"
            android:layout_alignStart="@+id/home_user_info_login"
            android:singleLine="true"
            android:textSize="16sp"
            android:gravity="left|center" />

        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_gpa"
            android:singleLine="true"
            android:layout_below="@+id/home_user_info_email"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:gravity="center_vertical"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_promo"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/home_user_info_credits"
            android:layout_alignStart="@+id/home_user_info_credits"
            android:gravity="center_vertical"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bigyear"
            android:id="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/home_user_info_profile_picture"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_alignRight="@+id/textView11"
            android:layout_alignEnd="@+id/textView11"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/biggpa"
            android:id="@+id/textView9"
            android:layout_alignBottom="@+id/home_user_info_gpa"
            android:layout_toRightOf="@+id/home_user_info_profile_picture"
            android:gravity="center"
            android:textColor="@color/white"
            android:autoText="false"
            android:layout_alignRight="@+id/textView11"
            android:layout_alignEnd="@+id/textView11"
            android:background="@color/colorPrimaryDark"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bigcredits"
            android:id="@+id/textView11"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:textSize="12dp"
            android:layout_below="@+id/home_user_info_gpa"
            android:layout_alignLeft="@+id/home_user_info_email"
            android:layout_alignStart="@+id/home_user_info_email"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/home_user_info_credits"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignLeft="@+id/home_user_info_gpa"
            android:layout_alignStart="@+id/home_user_info_gpa"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bigactive"
            android:id="@+id/textView7"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:textSize="12dp"
            android:layout_above="@+id/home_user_info_promo"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginBottom="11dp"
            android:layout_toLeftOf="@+id/home_user_info_promo"
            android:layout_toStartOf="@+id/home_user_info_promo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_user_info_active_time"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/last_mark_title"
        android:id="@+id/home_last_mark_title"
        android:layout_below="@+id/home_user_info_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/home_last_marks_list"
        android:layout_below="@+id/home_last_mark_title"


        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/last_grade_title"
        android:id="@+id/home_last_grade_title"
        android:layout_below="@id/home_last_marks_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_last_grade_list"
        android:layout_below="@+id/home_last_grade_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f5f4f9"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp" />

</RelativeLayout>
