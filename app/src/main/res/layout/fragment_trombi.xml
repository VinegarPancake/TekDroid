<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:weightSum="100"
        android:id="@+id/fragment_trombi_user_selection_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/fragment_trombi_location_spinner"
            android:spinnerMode="dropdown"
            android:background="@color/colorPrimaryDark"
            android:gravity="center" />

        <EditText
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="4"
            android:id="@+id/fragment_trombi_year_selecter"
            android:digits="0123456789"
            android:hint="@string/yearChoice"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:gravity="bottom"
            android:longClickable="false"
            android:layout_weight="93.14"
            android:text="2014"
            android:editable="false"
            android:contextClickable="false" />

        <Spinner
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_trombi_promo_spinner"
            android:spinnerMode="dropdown"
            android:background="@color/colorPrimaryDark"
            android:gravity="center" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="69dp"
            android:layout_height="fill_parent"
            android:id="@+id/fragment_trombi_search_button"
            android:background="@drawable/ic_research"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/fragment_trombi_user_selection_layout"
        android:layout_alignStart="@+id/fragment_trombi_user_selection_layout"
        android:background="@color/colorPrimary"
        android:weightSum="1"
        android:layout_toRightOf="@+id/fragment_trombi_user_selection_layout"
        android:layout_alignRight="@+id/fragment_trombi_user_selection_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="fill_horizontal"
        android:id="@+id/fragment_trombi_header_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Results for :"
            android:id="@+id/textView10"
            android:layout_weight="0.16"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textColorHighlight="#b9ddfd"
            android:gravity="center" />

        <TextView
            android:layout_width="61dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tek1"
            android:id="@+id/fragment_trombi_promo_title"
            android:singleLine="true"
            android:textColor="#fafafa"
            android:textAlignment="gravity"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FR/PARIS"
            android:id="@+id/fragment_trombi_city_title"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2016"
            android:id="@+id/fragment_trombi_year_title"
            android:layout_weight="0.16"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:gravity="center" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_trombi_result_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp" />
</RelativeLayout>
