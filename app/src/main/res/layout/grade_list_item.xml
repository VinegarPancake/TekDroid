<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/grade_list_item_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/grade_list_item_module_title"
        android:background="@color/colorPrimary"
        android:singleLine="true"
        android:layout_alignTop="@+id/grade_list_item_module_grade"
        android:layout_alignRight="@+id/grade_list_item_module_grade"
        android:layout_alignEnd="@+id/grade_list_item_module_grade"
        android:layout_marginRight="109dp"
        android:layout_marginEnd="109dp"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/grade_list_item_module_grade"
        android:gravity="center_vertical"
        android:textColor="@color/white"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/grade_list_item_module_grade"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="249dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:gravity="bottom|center"
        android:textSize="15sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
         />
</RelativeLayout>
