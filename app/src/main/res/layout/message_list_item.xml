<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:textSize="20sp"
        android:id="@+id/message_list_item_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:textSize="13dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Body"
        android:textSize="16sp"
        android:id="@+id/message_list_item_body"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message_list_item_title"
        android:gravity="center"
        android:background="#95c6ed"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="user_l"
        android:textSize="16sp"
        android:id="@+id/message_list_item_from"
        android:background="#2c3035"
        android:autoText="false"
        android:gravity="center"
        android:layout_marginRight="234dp"
        android:layout_marginEnd="234dp"
        android:textColor="#f08007"
        android:singleLine="true"
        android:layout_below="@+id/message_list_item_body"
        android:layout_alignRight="@+id/message_list_item_title"
        android:layout_alignEnd="@+id/message_list_item_title"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="le 12/15/45 Ã  24h56"
        android:id="@+id/message_list_item_date"
        android:background="@color/colorPrimary"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/message_list_item_from"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="165dp"
        android:layout_marginStart="165dp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>
