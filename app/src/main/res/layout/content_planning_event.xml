<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.discovery.java.tekdroid.Activities.PlanningActivity"
    >

    <TextView
        android:id="@+id/acti_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre de l'activité blah"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/descVoid"
        android:layout_below="@id/acti_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Description"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/acti_desc"
        android:layout_below="@id/descVoid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité de l'activité"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/roomVoid"
        android:layout_below="@id/acti_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salle(s)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/acti_room"
        android:layout_below="@id/roomVoid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demande à Nico"
        android:textSize="16sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrit au module"
        android:id="@+id/checkBoxModuleRegistered"
        android:checked="true"
        android:layout_below="@id/acti_room"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrit à l'event"
        android:id="@+id/checkBoxEventRegistered"
        android:checked="false"
        android:layout_below="@id/checkBoxModuleRegistered" />

</RelativeLayout>
